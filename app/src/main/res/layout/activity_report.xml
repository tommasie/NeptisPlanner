<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.uniroma1.neptis.planner.it.uniroma1.neptis.planner.report.Report"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Report"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="24dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_type"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:spinnerMode="dialog" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_category"
        android:layout_below="@+id/spinner_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:spinnerMode="dialog"
        android:layout_marginTop="20dp" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/autocomplete_structure"
        android:layout_below="@+id/spinner_category"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Digit the name of the structure"
        android:layout_marginTop="20dp"
        android:paddingStart="4dp" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/autocomplete_area"
        android:layout_below="@+id/autocomplete_structure"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Digit the attraction "
        android:layout_marginTop="20dp"
        android:paddingStart="4dp"
        android:imeOptions="actionNext" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText_minutes"
        android:layout_below="@+id/autocomplete_area"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Indicate the minutes"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@+id/textView_minutes"
        android:layout_marginBottom="10dp"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:paddingStart="4dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report it!"
        android:id="@+id/button_report"
        android:onClick="reportIt"
        android:background="#C42331"
        android:layout_below="@+id/editText_minutes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="minutes"
        android:id="@+id/textView_minutes"
        android:layout_below="@+id/autocomplete_area"
        android:layout_alignRight="@+id/autocomplete_area"
        android:layout_alignEnd="@+id/autocomplete_area"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp" />

</RelativeLayout>

</ScrollView>