<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/neptis_blue"
    tools:context="it.uniroma1.neptis.planner.LoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:inputType="textWebEmailAddress"
        android:ems="10"
        android:id="@+id/editText_mail"
        android:layout_below="@+id/textView_login"
        android:layout_marginTop="35dp"
        android:hint="E-mail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/title"
        android:layout_alignEnd="@+id/title"

        android:background="#ffffff"
        android:paddingStart="10dp"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:layout_below="@+id/editText_mail"
        android:layout_alignLeft="@+id/editText_mail"
        android:layout_alignStart="@+id/editText_mail"
        android:layout_alignRight="@+id/editText_mail"
        android:layout_alignEnd="@+id/editText_mail"
        android:imeOptions="actionSend"

        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:textColor="#ffffff"
        android:textStyle="italic"
        android:textAllCaps="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Log in"
        android:id="@+id/textView_login"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />



    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_remember_login"
        android:id="@+id/checkBox_rem_login"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:checked="false"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/action_register_user"
        android:id="@+id/textView_newuser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/checkBox_rem_login"
        android:clickable="true"
        android:onClick="btn_registration"
        />

    <Button

        android:background="@drawable/new_user"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/button_newuser"
        android:layout_alignTop="@+id/textView_newuser"
        android:layout_alignRight="@+id/password"
        android:layout_alignEnd="@+id/password" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_newuser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_sign_in_button"
        android:text="@string/action_sign_in_short"
        android:background="@drawable/buttonshape"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/password"
        android:layout_alignEnd="@+id/password"
        android:textColor="#ffffff"
         />
</RelativeLayout>

