<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.uniroma1.neptis.planner.planning.Best_Time_Plan">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Best Time Planning"
        android:id="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Available Time:"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="20dp"
        android:text="Must visit:"
        android:id="@+id/textView_must"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/hh_picker"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Exclude visit:"
        android:id="@+id/textView_exclude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/multiAutoCompleteTextView_must"
        android:layout_marginTop="30dp"
        android:layout_centerVertical="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/btn_next2"
        android:onClick="next2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/multiAutoCompleteTextView_exclude"
        android:layout_alignEnd="@+id/multiAutoCompleteTextView_exclude"
        android:background="#C42331"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/multiAutoCompleteTextView_exclude"
        android:layout_below="@+id/textView_exclude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="[empty]"
        android:focusable="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/multiAutoCompleteTextView_must"
        android:layout_below="@+id/textView_must"
        android:layout_alignRight="@+id/multiAutoCompleteTextView_exclude"
        android:layout_alignEnd="@+id/multiAutoCompleteTextView_exclude"
        android:hint="[empty]"
        android:focusable="false"
         />

    <NumberPicker
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/min_picker"
        android:orientation="horizontal"
        android:clickable="false"
        android:focusable="false"
        android:layout_alignTop="@+id/hh_picker"
        android:layout_toLeftOf="@+id/textView15"
        android:layout_toStartOf="@+id/textView15" />

    <NumberPicker
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:id="@+id/hh_picker"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:clickable="false"
        android:focusable="false"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="hh"
        android:id="@+id/textView14"
        android:layout_alignTop="@+id/textView15"
        android:layout_toRightOf="@+id/hh_picker"
        android:layout_toEndOf="@+id/hh_picker"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="mm"
        android:id="@+id/textView15"
        android:layout_alignTop="@+id/min_picker"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="20dp" />


</RelativeLayout>

</ScrollView>