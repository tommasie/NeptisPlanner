<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>/sdcard/logfile.log</file>
        <append>true</append>
        <encoder>
            <pattern>[%d{HH:mm:ss}] %logger{35} - %msg %n</pattern>
        </encoder>
    </appender>
    <appender name="GPS" class="ch.qos.logback.core.FileAppender">
        <file>/sdcard/gps.log</file>
        <append>true</append>
        <encoder>
            <pattern>[%d{HH:mm:ss}] %logger{35} - %msg %n</pattern>
        </encoder>
    </appender>
    <appender name="SIGNALS" class="ch.qos.logback.core.FileAppender">
        <file>/sdcard/signals.log</file>
        <append>true</append>
        <encoder>
            <pattern>[%d{HH:mm:ss}] %logger{35} - %msg %n</pattern>
        </encoder>
    </appender>
    <logger name="gps" level="DEBUG" additivity="false">
        <appender-ref ref="GPS"/>
    </logger>
    <logger name="signals" level="DEBUG" additivity="false">
        <appender-ref ref="SIGNALS"/>
    </logger>
    <root>
        <appender-ref ref="FILE"/>
    </root>
</configuration>